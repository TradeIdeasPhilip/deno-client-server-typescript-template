  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno",
      "request": "launch",
      "type": "pwa-node",
      "program": "./deno/Main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect",
        "--allow-all"
      ],
      "args": [
        "-f",
        "config_common.txt"
      ],
      "outputCapture": "std",
      "attachSimplePort": 9229,
    },
    {
      "type": "node",
      "name": "Bundle browser",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "bundle",
        "--config=everything-else/visible-to-web/tsconfig.json",
        "everything-else/visible-to-web/ts/index.ts",
        "everything-else/visible-to-web/index.js"
      ],
    }
  ]
}